{
  "compilerOptions": {
      "noImplicitAny": true,
      "removeComments": true,
      "jsx": "react",
      "module": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./source",
      "paths": {
        "algorithms/*": ["algorithms/*"],
        "actions/*": ["store/actions/*"],
        "reducers/*": ["store/reducers/*"],
        "store": ["store"],
        "api": ["api"]
      }
  },
  "exclude": [
    "node_modules",
    "*.test.tsx"
  ],
  "awesomeTypescriptLoaderOptions": {
      /* ... */
  }
}